<% if @event.errors.any? %>
  <ul>
  <% @event.errors.full_messages.each do |msg|  %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for @event do |f| %>

  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :date %>
    <%= f.datetime_select :date %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  
  <p>
    <%= f.label :venue_id %><br />
    <%= f.collection_select :venue_id,
                            Venue.all,
                            :id,
                            :name %>
  </p>
  <p><%= f.submit %></p>

<% end %>

